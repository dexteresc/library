<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16"
            fx:controller="org.controllers.NewLoanController">
    <ScrollPane hbarPolicy="NEVER" prefHeight="100.0" prefWidth="200.0" styleClass="libraryScrollPane"
                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0">
        <BorderPane maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity"
                    prefHeight="300.0" prefWidth="300">
            <top>
                <HBox alignment="CENTER" fillHeight="false" prefHeight="100.0" spacing="40.0"
                      BorderPane.alignment="TOP_CENTER">
                    <Label text="Loan">
                        <font>
                            <Font name="System Bold" size="20.0"/>
                        </font>
                    </Label>
                </HBox>
            </top>
            <center>
                <HBox alignment="CENTER" fillHeight="false" maxWidth="400">
                    <VBox prefHeight="100.0" spacing="20.0">
                        <Label text="Items that will be borrowed."/>
                        <GridPane fx:id="loanItemsBox" alignment="CENTER_LEFT" gridLinesVisible="true">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                        </GridPane>
                    </VBox>
                </HBox>
            </center>
            <bottom>
                <VBox prefHeight="100.0" spacing="20.0" BorderPane.alignment="BOTTOM_CENTER">
                    <HBox alignment="CENTER" fillHeight="false" spacing="40.0">
                        <Button onAction="#navigateToHome" text="Add additional items">
                        </Button>
                        <Button fx:id="startLoanButton" onAction="#startLoan" text="Start Loan">
                        </Button>
                    </HBox>
                    <HBox alignment="CENTER" fillHeight="false" prefHeight="100.0">
                        <Label fx:id="errorLabel" styleClass="fieldError"/>
                    </HBox>
                    <HBox alignment="CENTER" fillHeight="false" prefHeight="100.0">
                        <Button fx:id="cancelLoanButton" onAction="#cancelLoan" text="Cancel Loan">
                        </Button>
                    </HBox>
                    <BorderPane.margin>
                        <Insets top="20.0"/>
                    </BorderPane.margin>
                </VBox>
            </bottom>
        </BorderPane>
    </ScrollPane>
</AnchorPane>
