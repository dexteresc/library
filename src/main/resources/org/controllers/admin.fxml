<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="Infinity" maxWidth="Infinity" minHeight="400.0"
            minWidth="600.0"
            prefHeight="400.0" prefWidth="600.0" stylesheets="@stylesheet.css"
            xmlns="http://javafx.com/javafx/13" fx:controller="org.controllers.AdminController">
    <center>
        <ScrollPane hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0" styleClass="libraryScrollPane"
                    BorderPane.alignment="CENTER">
            <StackPane prefHeight="26.0" prefWidth="598.0" styleClass="adminView">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <VBox fx:id="informationVBox" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                    <HBox prefHeight="100.0" prefWidth="200.0">
                        <Label text="Title:"/>
                        <TextArea prefHeight="6.0" prefWidth="400.0"/>
                    </HBox>
                    <HBox prefHeight="100.0" prefWidth="200.0">
                        <Label text="Author:"/>
                    </HBox>
                    <HBox prefHeight="100.0" prefWidth="200.0">
                        <Label text="Label"/>
                    </HBox>
                </VBox>
            </StackPane>
        </ScrollPane>
    </center>
    <left>
        <VBox alignment="TOP_CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Button fx:id="backButton" mnemonicParsing="false" text="Back"/>
            <Button fx:id="saveButton" mnemonicParsing="false" text="Save"/>
        </VBox>
    </left>
</BorderPane>
